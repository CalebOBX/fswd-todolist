<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <div class="row" id="tasks"></div>
      <div class="row" id="newTask">
        <div class="col-12">
          <form id="newTaskForm">
            <input type="text" class="form-control" id="taskName" placeholder="Enter your task..." />
            <button type="submit" class="btn btn-primary" id="addTask">Add</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>